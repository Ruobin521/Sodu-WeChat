.switch-container {
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  margin-top: 15rpx;
}

.switch-item {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.switch-item:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
  left: 15px;
}

.switch-item:first-child:before {
  display: none;
}

.switch-item-title {
  flex: 1;
}

.switch {
  transform: scale(0.85);
}

.icon {
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}