<view class='root' bindtap='toggleMenu'>

  <!-- 设置相关 -->
  <view class='setting'>
    <view class='setting-panel' wx:if="{{showSettingPanel}}" catchtap='catchEmptyTap'>
    </view>
    <view class='bottom_bar' wx:if="{{showMenu}}" catchtap='catchEmptyTap'>
      <view class='menu-item'>
        <image src='../../images/reader/moonlight.png'></image>
        <text>夜间</text>
      </view>
      <view class='menu-item'>
        <image src='../../images/reader/mulu.png'></image>
        <text>目录</text>
      </view>
      <view class='menu-item' catchtap='toggleSettingPanel'>
        <image src='../../images/reader/setting.png'></image>
        <text>设置</text>
      </view>
    </view>
  </view>

  <!-- 内容区域 -->
  <view class='content'>
    <view class='catalog-info'>
      <view>{{currentCatalog.catalogName}} </view>
    </view>
    <scroll-view class='content-container' scroll-y="true">
      <view class='html'>
        <!-- <view class='item'></view> -->
        <text>  {{currentCatalog.content}}  </text>
      </view>

      <view class='catalog-options' catchtap='catchEmptyTap'>
        <button catchtap="catalogSwitch" data-type="-1">上一章</button>
        <button catchtap="catalogSwitch" data-type="0">目录</button>
        <button catchtap="catalogSwitch" data-type="1">下一章</button>
      </view>
    </scroll-view>
  </view>

  <loading wx:if="{{isLoading}}"></loading>
</view>