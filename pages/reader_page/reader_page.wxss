/* pages/reader_page/reader_page.wxss */
page {  
  display: block;  
  min-height: 100%;  
  background-color: transparent;  
} 
.root {
  height: 100vh;
  overflow-x: hidden;
}

.nav {
  height: 88rpx;
  background: #191919;
  color: white;
  font-size: 28rpx;
  line-height: 88rpx;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99;
}

.bottom_bar {
  height: 98rpx;
  background: #191919;
  color: white;
  font-size: 28rpx;
  line-height: 88rpx;
  text-align: center;
  font-weight: 200;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  z-index: 99;
}

.menu-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.menu-item image {
  position: absolute;
  left: 50%;
  top: 10rpx;
  transform: translateX(-50%);
  display: block;
  height: 40rpx;
  width: 40rpx;
}

.menu-item text {
  font-size: 22rpx;
  color: #adadad;
  line-height: 20rpx;
  position: absolute;
  left: 50%;
  top: 60rpx;
  transform: translateX(-50%);
}

.setting-panel {
  height: 400rpx;
  width: 100%;
  position: absolute;
  bottom: 88rpx;
  background: rgba(25, 25, 25, 0.9);
  z-index: 99;
}

.content {
  box-sizing: border-box;
  height: 100%;
  background: #aac5aa;
  position: relative;
}

.catalog-info {
  width: 100%;
  height: 45rpx;
  font-size: 25rpx;
  line-height: 45rpx;
  z-index: 99;
  margin-left: 20rpx;
}

.content-container {
  position: absolute;
  top: 45rpx;
  bottom: 45rpx;
  box-sizing: border-box;
  width: 100%;
  overflow-y: auto;
}

.html {
  box-sizing: border-box;
  min-height: 100%;
  padding: 0 20rpx 200rpx 30rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  
}

.catalog-options {
  height: 180rpx;
  margin-top: -180rpx;  
  display: flex;
  align-items: center;
  border-top: 1rpx solid rgba(25, 25, 25, 0.2);
  box-sizing: border-box;
}

.catalog-options button {
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  background: #e6e6e6;
}

.item {
  height: 300rpx;
  border-bottom: 1rpx solid blue;
  /* background: rebeccapurple; */
}
