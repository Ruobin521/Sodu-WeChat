.root {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: hidden;
  /* line-height: 64rpx;
  font-size: 36rpx; */
}

.nav {
  position: absolute;
  height: 88rpx;
  width: 100%;
  top: 0rpx;
  background: rgba(25, 25, 25, 0.95);
  z-index: 99;
  transform: translateY(-100%);
  display: flex;
}

.nav-title {
  flex: 1;
}

.nav-left-right {
  width: 100rpx;
  line-height: 88rpx;
  color: #e6e6e6;
  margin: 0 20rpx;
}

.showNav {
  animation: showNav 300ms forwards;
}

.hideNav {
  animation: hideNav 300ms forwards;
}

.setting-panel {
  height: 450rpx;
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  background: rgba(25, 25, 25, 0.95);
  z-index: 99;
  transform: translateY(100%);
}

.showPanel {
  animation: showSetting 300ms forwards;
}

.hidePanel {
  animation: hideSetting 300ms forwards;
}

.addShelf {
  height: 76rpx;
  width: 160rpx;
  position: absolute;
  bottom: 500rpx;
  right: 0;
  background: rgba(25, 25, 25, 0.95);
  z-index: 99;
  border-radius: 38rpx 0 0 38rpx;
  font-size: 26rpx;
  color: #e6e6e6;
  line-height: 76rpx;
  text-align: center;
  padding-left: 15rpx;
  transform: translateX(100%);
}

.showAddBtn {
  animation: showAddBtn 300ms forwards;
}

.hideAddBtn {
  animation: hideAddBtn 300ms forwards;
}

.setting-section {
  height: 62rpx;
  margin: 30rpx 0 40rpx 0;
  padding: 0 0 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.desc {
  color: #e6e6e6;
  font-size: 30rpx;
  line-height: 60rpx;
  height: 60rpx;
}

.settting-btn {
  height: 60rpx;
  width: 120rpx;
  color: #e6e6e6;
  border: 1rpx solid #e6e6e6;
  border-radius: 10rpx;
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
  flex: 1;
  max-width: 120rpx;
  margin-right: 15rpx;
}

.setting-text {
  height: 60rpx;
  width: 20rpx;
  color: gray;
  display: inline-block;
  text-align: center;
  font-size: 27rpx;
  line-height: 60rpx;
  margin-right: 80rpx;
  margin-left: 15rpx;
  max-width: 80rpx;
}

.color-item {
  display: inline-block;
  height: 60rpx;
  width: 60rpx;
  background: red;
  margin: 0 15rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
}

.setting-panel .setting-section .slider {
  height: 60rpx;
  flex: 1;
  margin: 0 60rpx 0 20rpx;
  line-height: 60rpx;
}

.scroll {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding-top: 50rpx;
}

.catalog-info {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 45rpx;
  font-size: 25rpx;
  line-height: 45rpx;
  z-index: 99;
  padding-left: 20rpx;
}

.content-container {
  box-sizing: border-box;
  min-height: 100%;
  padding: 0 20rpx 200rpx 30rpx;
}

.catalog-options {
  height: 180rpx;
  margin-top: -180rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid rgba(25, 25, 25, 0.2);
  box-sizing: border-box;
}

.catalog-options button {
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  width: 150rpx;
  background: #e6e6e6;
}

 

@keyframes showSetting {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}

@keyframes hideSetting {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(100%);
  }
}

@keyframes showNav {
  from {
    transform: translateY(-100%);
  }

  to {
    transform: translateY(0);
  }
}

@keyframes hideNav {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(-100%);
  }
}

@keyframes showAddBtn {
  from {
    transform: translateX(0);
  }

  to {
    transform: translateX(100%);
  }
}

@keyframes hideAddBtn {
  from {
    transform: translateX(100%);
  }

  to {
    transform: translateX(0);
  }
}
