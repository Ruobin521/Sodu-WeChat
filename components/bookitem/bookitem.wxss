/* components/bookitem/bookitem.wxss */

.bookitem-container {
  height: 120rpx;
  padding: 10rpx 35rpx 10rpx 35rpx;
  background: #fff;
  position: relative;
}
 
.bookitem-container:before{
   content: " ";
   position: absolute;
   left: 0;
   bottom: 0;
   right: 0;
   height: 1px;
   border-bottom: 1px solid #dbdbdb;
   -webkit-transform-origin: 0 0;
   transform-origin: 0 0;
   -webkit-transform: scaleY(0.5);
   transform: scaleY(0.5);
}

.header {
  display: flex;
}

.book-name {
  flex: 1;
  font-size: 34rpx;
  color: #3a3a3a;
  line-height: 60rpx;
  font-weight: 400;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}

.update-time {
  font-size: 26rpx;
  line-height: 60rpx;
  color: #909090;
  font-weight: 300;
}

.chapter-name {
  font-size: 28rpx;
  line-height: 60rpx;
  color: #888888;
  font-weight: 300;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}
