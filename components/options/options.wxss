.option-container {
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column-reverse;
  align-items: flex-end;
  text-align: center;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
  display: none;
}

.option-container .option {
  width: 100%;
  height: 110rpx;
  background: white;
  border-top: 1rpx solid #a3a3a3;
  line-height: 110rpx;
  font-size: 32rpx;
  font-weight: 300;
}
.option-container .bookname {
     font-weight: 400;
  }
