/* components/bookitem/bookitem.wxss */

.bookitem-container {
  height: 120rpx;
  padding: 10rpx 35rpx 10rpx 25rpx;
  background: #fff;
  position: relative;
  display: flex;
}

.checkbox {
  margin-top: 30rpx;
  margin-right: 10rpx;
  transform: scale(0.9)
}

.cover-container {
  height: 120rpx;
  width: 90rpx;
  margin-right: 20rpx;
  position: relative;
}

.default-cover {
  display: absolute;
  height: 120rpx;
  width: 90rpx;
  left: 0;
  top: 0;
}

.book-cover {
  height: 120rpx;
  width: 90rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.sub-title {
  position: absolute;
  left: 50%;
  top: -12rpx;
  height: 120rpx;
  line-height: 120rpx;
  width: 30rpx;
  transform: translateX(-50%) translateY(10%);
  font-size: 30rpx;
  overflow: hidden;
  color: #999;
}

.book-info {
  flex: 1;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}

.bookitem-container:before {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #dbdbdb;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.header {
  display: flex;
}

.new {
  box-sizing: border-box;
  height: 60rpx;
}

.new image {
  height: 55rpx;
  width: 55rpx;
  margin-left: 10rpx;
  box-sizing: border-box;
}

.book-name {
  font-size: 34rpx;
  color: #3a3a3a;
  line-height: 60rpx;
  font-weight: 400;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}

.update-time {
  flex: 1;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #909090;
  font-weight: 300;
  text-align: right;
}

.chapter-name {
  display: flex;
  flex: 1;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #888;
  font-weight: 300;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}
