
.scroll {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding-top: 50rpx;
}

.content-container {
  box-sizing: border-box;
  min-height: 100%;
  padding: 0 20rpx 200rpx 30rpx;
}

.catalog-options {
  height: 180rpx;
  margin-top: -180rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid rgba(25, 25, 25, 0.2);
  box-sizing: border-box;
}

.catalog-options button {
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  width: 150rpx;
  background: #e6e6e6;
}
